{
  "name": "stevie-ray/referrer-spam-blocker",
  "description": "Apache, Nginx, IIS, uWSGI, Varnish, HAProxy, Traefik & Lighttpd blacklist plus Google Analytics segment to prevent referrer spam traffic",
  "keywords": [
    "spam",
    "blacklist",
    "blocker",
    "referrer",
    "analytics",
    "apache",
    "nginx",
    "varnish",
    "iis",
    "uwsgi",
    "haproxy",
    "traefik",
    "lighttpd"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Stevie-Ray Hartog",
      "email": "mail@stevie-ray.nl",
      "homepage": "https://stevie-ray.nl"
    }
  ],
  "require": {
    "php": ">=8.3",
    "algo26-matthias/idna-convert": "^4.2.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.4",
    "phpstan/phpstan": "^2.1",
    "squizlabs/php_codesniffer": "^4.0",
    "php-coveralls/php-coveralls": "^2.9",
    "vimeo/psalm": "^6.13",
    "friendsofphp/php-cs-fixer": "^3.90"
  },
  "suggest":  {
    "ext-mbstring": "Install ext/mbstring for using input / output other than UTF-8 or ISO-8859-1",
    "ext-iconv": "Install ext/iconv for using input / output other than UTF-8 or ISO-8859-1"
  },
  "autoload": {
    "psr-4": {
      "StevieRay\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "StevieRay\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
    "phpstan": "phpstan analyse",
    "phpcs": "phpcs src/ tests/",
    "phpcbf": "phpcbf src/ tests/",
    "psalm": "psalm",
    "php-cs-fixer": "php-cs-fixer fix --dry-run --diff",
    "php-cs-fixer:fix": "php-cs-fixer fix",
    "quality": [
      "@phpstan",
      "@phpcs",
      "@psalm",
      "@test"
    ],
    "generate": "php run.php"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
